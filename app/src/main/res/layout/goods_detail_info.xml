<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <include
        layout="@layout/detail_title_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dp">

        <ImageView
            android:id="@+id/iv_user"
            android:layout_width="74dp"
            android:layout_height="match_parent"
            app:srcCompat="?android:attr/textSelectHandle" />

        <TextView
            android:id="@+id/tv_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="用户名"

            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="532dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="134dp"
            android:layout_height="43dp"
            android:contextClickable="true"
            android:drawableLeft="@drawable/user_price_unit"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="8dp"
            android:text="123"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_detail_description"
            android:layout_width="match_parent"
            android:layout_height="147dp"
            android:hint="任务描述"
            android:textColor="@android:color/background_dark"
            android:textColorHint="@android:color/darker_gray"
            android:background="@drawable/border_line_lightgrey"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="留位置给图片"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="留位置给评论区"
            android:textColor="@android:color/background_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/tv_gsId"
                android:layout_width="46dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="商品编号:"
                android:textColor="?attr/colorButtonNormal" />

            <TextView
                android:id="@+id/tv_GoodsID"
                android:layout_width="208dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/black" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>