<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/main_bottom_bar"
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:layout_alignParentBottom="true"
              android:orientation="horizontal">
    
    <RelativeLayout
        android:id="@+id/bottom_bar_task__btn"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        >
        
        <TextView
            android:id="@+id/bottom_bar_text_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="任务大厅"
            android:textColor="#666666"
            android:textSize="14sp"/>
        
        <ImageView
            android:id="@+id/bottom_bar_image_task"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_above="@+id/bottom_bar_text_task"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:src="@drawable/home"/>
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/bottom_bar_community_btn"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        >
        
        <TextView
            android:id="@+id/bottom_bar_text_community"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="社区"
            android:textColor="#666666"
            android:textSize="14sp"/>
        
        <ImageView
            android:id="@+id/bottom_bar_image_community"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_above="@+id/bottom_bar_text_community"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:src="@drawable/home"/>
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/bottom_bar_message_btn"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        >
        
        <TextView
            android:id="@+id/bottom_bar_text_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="消息"
            android:textColor="#666666"
            android:textSize="14sp"/>
        
        <ImageView
            android:id="@+id/bottom_bar_image_message"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_above="@+id/bottom_bar_text_message"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:src="@drawable/home"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/bottom_bar_me_btn"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1">
        
        <TextView
            android:id="@+id/bottom_bar_text_me"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="个人中心"
            android:textColor="#666666"
            android:textSize="14sp"/>
        
        <ImageView
            android:id="@+id/bottom_bar_image_me"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_above="@+id/bottom_bar_text_me"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:src="@drawable/home"/>
    </RelativeLayout>


</LinearLayout>