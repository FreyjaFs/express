<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hhn.asus.express.TaskHall.TaskhallPublishAcitivity"
    android:orientation="vertical"
    android:background="@android:color/white">

    <include layout="@layout/detail_title_bar"/>

    <EditText
        android:id="@+id/et_Dtitle"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:background="@android:color/white"
        android:hint="任务标题 输入侠客喜爱的标题"
        android:singleLine="true"
        android:textColorHint="@android:color/darker_gray" />
    <View
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="1dp" />

    <EditText
        android:id="@+id/et_Detailed_description"
        android:layout_width="375dp"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="30dp"
        android:background="@android:color/white"
        android:hint="描述一下任务内容，入手渠道和须知"
        android:singleLine="true"
        android:textColor="@android:color/background_dark"
        android:textColorHint="@android:color/darker_gray" />

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="375dp"
        android:layout_height="36dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="30dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:maxLines="1">

        <TextView
            android:layout_width="73dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="交易方式"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn_suishou"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:gravity="center"
            android:text="随手/顺路"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_kuaidi"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:text="快递"
            android:textSize="12sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_subTask"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/register_selector"
        android:text="提交"
        android:textColor="#000000"
        android:textSize="18sp" />


</LinearLayout>
